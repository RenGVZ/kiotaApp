<div class="theme">
  <div class="img-box">
    <div class= "white-box">
      <p>Finding the perfect place for you...</p>
      <div class="progress-bar">
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="grey-bar"></div>
        <div class="grey-bar"></div>
      </div>
    </div>
  </div>
  <div class="question-box">
    <h1 class="question" style="font-size: 28px;">Are you afraid of heights?</h1>
    <div class="button-div">
      <%= form_for(@user, url: question_update_path) do |f| %>
        <div>
          <%= f.check_box :wants_first_floor, checked: true, hidden: true %>
          <%= f.submit "Terrified", class: "choice-button" %>
        </div>
      <% end %>

      <%= form_for(@user, url: question_update_path) do |f| %>
        <div>
          <%= f.check_box :wants_first_floor, checked: false, hidden: true %>
          <%= f.submit "No problem", class: "choice-button" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'shared/question_layout' %>
</div>
