<div class="theme">
  <div class="img-box">
    <div class= "white-box">
      <p>Finding the perfect place for you...</p>
      <div class="progress-bar">
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="grey-bar"></div>
        <div class="grey-bar"></div>
        <div class="grey-bar"></div>
        <div class="grey-bar"></div>
      </div>
    </div>
  </div>
  <div class="main-container">
    <h1 class="question" style="font-size: 25px">Do you like going out for coffee or going out for beer?</h1>
    <div class="button-div">
      <%= form_for(@user, url: question_update_path) do |f| %>
        <div>
          <%= f.check_box :wants_bar_nearby, checked: true, hidden: true %>
          <%= f.submit "Beer", class: "choice-button" %>
        </div>
      <% end %>

      <%= form_for(@user, url: question_update_path) do |f| %>
        <div>
          <%= f.check_box :wants_cafe_nearby, checked: true, hidden: true %>
          <%= f.submit "Coffee", class: "choice-button" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'shared/question_layout' %>
</div>